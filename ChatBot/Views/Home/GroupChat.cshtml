<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatBot</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #e9ecef;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .chat-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .chat-header {
            font-size: 28px;
            font-weight: bold;
            color: #495057;
            text-align: center;
            margin-bottom: 20px;
            border-bottom: 2px solid #6c757d;
            padding-bottom: 10px;
        }

        .chat-box {
            height: 400px;
            overflow-y: scroll;
            border: 1px solid #dee2e6;
            padding: 20px;
            border-radius: 8px;
            background-color: #f8f9fa;
        }

        .chat-message {
            margin-bottom: 15px;
            padding: 10px;
            border-radius: 8px;
        }

            .chat-message.user {
                background-color: #cce5ff;
                text-align: right;
            }

            .chat-message.bot {
                background-color: #e2e3e5;
                text-align: left;
            }

        .chat-input {
            margin-top: 20px;
        }

            .chat-input input {
                width: calc(100% - 100px);
                display: inline-block;
            }

            .chat-input button {
                width: 80px;
                display: inline-block;
            }
    </style>
</head>
<body>
    <div class="chat-container">
        <div class="chat-header">Group Chat</div>
        <div class="form-group">
            <label for="displayname">Your Name:</label>
            <input type="text" class="form-control" id="displayname" placeholder="Enter your name">
        </div>
        <div class="chat-box" id="discussion"></div>
        <div class="chat-input form-group">
            <input type="text" class="form-control" id="message" placeholder="Type your message here">
            <button class="btn btn-primary" id="sendmessage">Send</button>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.7/dist/browser/signalr.min.js"></script>
    <script>
        var connection = new signalR.HubConnectionBuilder().withUrl("/chat").build();

        // Start the connection
        connection.start().catch(function (err) {
            return console.error(err.toString());
        });

        // Check if the name field is disabled on page load
        window.onload = function () {
            var nameField = document.getElementById("displayname");
            if (nameField.value !== "") {
                nameField.disabled = true;
            }
        };

        function sendMessage() {
            var user = document.getElementById("displayname").value;
            var message = document.getElementById("message").value;

            if (message.trim() !== "") {
                // Disable the name field after the first message is sent
                document.getElementById("displayname").disabled = true;
                connection.invoke("SendMessage", user, message).catch(function (err) {
                    return console.error(err.toString());
                });
                document.getElementById("message").value = '';
            }
        }

        document.getElementById("sendmessage").addEventListener("click", function (event) {
            sendMessage();
            event.preventDefault();
        });

        document.getElementById("message").addEventListener("keypress", function (event) {
            if (event.key === "Enter") {
                sendMessage();
                event.preventDefault();
            }
        });

        connection.on("ReceiveMessage", function (user, message) {
            var encodedMsg = user + ": " + message;
            var li = document.createElement("li");
            li.textContent = encodedMsg;
            li.classList.add("chat-message");
            li.classList.add(user === document.getElementById("displayname").value ? "user" : "bot");
            document.getElementById("discussion").appendChild(li);
            var chatBox = document.getElementById("discussion");
            chatBox.scrollTop = chatBox.scrollHeight;
        });
    </script>
</body>
</html>
